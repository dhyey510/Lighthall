<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
    />
    <title>Lighthall</title>
  </head>
  <body>
    <div class="container">
      <!-- Create form for increament value and get current user location -->
      <div class="p-3 d-flex justify-content-center">
        <form action="/increament?_method=PUT" method="POST">
          <h1 class="mb-3">Total Clicks : <%= data.totalCount %></h1>
          <input type="text" name="lat" id="lat" class="d-none" />
          <input type="text" name="long" id="long" class="d-none" />
          <div class="text-center">
            <button class="btn btn-primary">Click Me!!</button>
          </div>
        </form>
      </div>

      <hr />

      <!-- create dynamic table to display geolocation  -->
      <div class="d-flex justify-content-center p-3">
        <table class="table table-hover table-bordered w-50">
          <thead>
            <tr>
              <th>Country</th>
              <th>City</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% for(let data of locations) { %>

            <tr>
              <td><%= data.country %></td>
              <td><%= data.city %></td>
              <td><%= data.clicks %></td>
            </tr>

            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="./app.js"></script>
  </body>
</html>
